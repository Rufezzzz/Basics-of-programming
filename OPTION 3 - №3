#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    setlocale(0,"");

    double a,y;

    cout << "a = ";
    cin >> a;

    if (a < -2)
    {
        y = -a - 2;
    }
    else
    {
        if (a >= -2 and a <= 2)
        {
            y = -abs(a) + 2;
        }
        else
        {
            y = a - 2;
        }
    }

    cout << "F(a) = " << y;

    return 0;
}
