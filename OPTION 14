#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    double x,y,z;

    cout<<"x ="<<'\n';
    cin>>x;

    cout<<"y ="<<'\n';
    cin>>y;

    cout<<"z ="<<'\n';
    cin>>z;

    double s0 = pow(y,x+1) / ((pow(fabs(y-2),1/3.0) + 3));
    double s1 = (x + y/2.0) / (2*fabs(x+y));
    double s2 = pow(x+1, -1.0/sin(z));

    cout<<s0 + s1*s2;
    return 0;
}
