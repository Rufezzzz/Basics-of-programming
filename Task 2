#include <iostream>

using namespace std;

int main()
{
    setlocale(0,"");

    int a, b, n;

    cout << "Сколько рублей стоит пирожок?" << '\n';
    cin >> a;

    cout << "И сколько копеек стоит пирожок?" << '\n';
    cin >> b;

    cout << "Сколько пирожков вам нужно?" << '\n';
    cin >> n;

    int s = a * 100 + b; //цена 1 пирожка в рублях

    s = s * n; //цена за n пирожков

    cout << s / 100 << "." << s % 100 << " Рублей";

    return 0;
}
