#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    setlocale(0,"");

    double x,y,R;

    cout << "x = ";
    cin >> x;

    cout << "y = ";
    cin >> y;

    cout << "R = ";
    cin >> R;

    if (R > 1)
    {
        if (((pow(x - R, 2) + pow(y - R, 2) < R*R) and ((x >= 1) and (y >= 1))) or ((pow(x + R, 2) + pow(y + R, 2) < R*R) and ((x <= -1) and (y <= -1))))
        {
            cout << "Данная точка содержится в заштрихованной области";
        }
        else
        {
            cout << "Данная точка НЕ содержится в заштрихованной области";
        }
    }
    else
    {
        cout << "ERROR! R должно быть больше 1";

        return 0;
    }

    return 0;
}
