#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    double x,y,z;

    cout<<"x ="<<'\n';
    cin>>x;

    cout<<"y ="<<'\n';
    cin>>y;

    cout<<"z ="<<'\n';
    cin>>z;

    double s0 = pow(2, -(x));
    double s1 = pow(fabs(y),1.0/4.0);
    double s2 = sqrt(x + s1);
    double s3 = pow(exp(x - (1/sin(z))),1/3.0);

    cout<<s0 * s2 * s3;
    return 0;
}
