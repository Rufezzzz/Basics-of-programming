#include <iostream>
#include <cmath>
#include <ctime>

using namespace std;


double calculateSideLength(double x1, double y1, double x2, double y2)
{
    return sqrt(pow(x2 - x1, 2) + pow(y2 - y1, 2));
}


double calculateTrianglePerimeter(double xA, double yA, double xB, double yB, double xC, double yC) {
    double sideAB = calculateSideLength(xA, yA, xB, yB);
    double sideBC = calculateSideLength(xB, yB, xC, yC);
    double sideCA = calculateSideLength(xC, yC, xA, yA);
    return sideAB + sideBC + sideCA;
}

int main() {
    const int numTriangles = 5;
    const int numVertices = 3;

    double X[numTriangles][numVertices];
    double Y[numTriangles][numVertices];

    srand(time(0));

    for (int i = 0; i < numTriangles; ++i) {
        for (int j = 0; j < numVertices; ++j) {
            X[i][j] = rand() % 10;
            Y[i][j] = rand() % 10;
        }
    }
    
    
    for (int i = 0; i < numTriangles; ++i) {
        double xA = X[i][0], yA = Y[i][0];
        double xB = X[i][1], yB = Y[i][1];
        double xC = X[i][2], yC = Y[i][2];

        double perimeter = calculateTrianglePerimeter(xA, yA, xB, yB, xC, yC);
        cout << "Периметр треугольника " << i + 1 << ": " << perimeter << endl;
    }

    return 0;
}
