#include <iostream>

using namespace std;

int main()
{
    setlocale(0,"");

    int n;

    cout << "Кол-во элементов в массиве равно ";
    cin >> n;

    int A[n];

    ///Заполняем массив:

    int i = 0;

    while (i < n)
    {
        cout << i + 1 << "-й элемент массива = ";
        cin >> A[i];
        i++;
    }

    ///1-й пункт:

    int proizvedenie = 1;

    for ( int j = 0; j <= n - 1; )
    {
        proizvedenie = proizvedenie * A[j];
        j = j + 2;
    }

    cout << "\n" << "1) Произведение эл-ов с чётными номерами = " << proizvedenie;

    ///2-ой пункт:

    int a = 0;

    int b = n - 1;

    while (A[a] != 0)
    {
        a++;
    }

    while (A[b] != 0)
    {
        b--;
    }

    int summ = 0;

    for (int k = a + 1; k != b; k++)
    {
        summ += A[k];
    }

    cout << "\n" << "2) Сумма эл-ов, расположенных между первым и последним нулями, равна " << summ;

    ///Основной пункт:

    for (int q = 1; q < n; ++q)
    {
        for (int u = 0; u < n - q; u++)
        {
            if (A[u] <  A[u+1])
            {
                int g = A[u];
                A[u] = A[u+1];
                A[u+1] = g;

            }
        }
    }

    cout << "\n" << "Отсортированный массив: ";
    for (int s = 0; s < n; s++)
    {
        cout << A[s] << " ";
    }

    return 0;
}
