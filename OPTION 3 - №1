#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    setlocale(0,"");
    
    int c,k,a,b;

    cout << "k = ";
    cin >> k;
    
    cout << "a = ";
    cin >> a;
    
    cout << "b = ";
    cin >> b;
    
    c = k * (a + b);
    
    int ost = c % 4;
    
    switch (ost)
    {
        
        case 0: cout << "C = " << c << "Остаток = 0"; break;
        case 1: case 3: cout << "С = " << c - ost << "Остаток = " << ost; break;
        case 2: cout << "С = " << c + ost << "Остаток = " << ost; break;
    }
    
    return 0;
}
