#include <iostream>

using namespace std;

int main()
{
    
    setlocale(0,"");
    
    int N;
    
    cout << "Введите порядок квадратной матрицы: ";
    cin >> N;
    
    int A[N][N];
    
    for (int i = 0; i < N; i++)
    {
        for (int j = 0; j < N; j++)
        {
            if (j == i)
            {
                A[i][j] = N - i;
            }
            else
            {
                A[i][j] = 0;
            }
        }
    }
    
    for (int i = 0; i < N; i++)
    {
        for (int j = 0; j < N; j++)
        {
            cout << A[i][j] << " ";
        }
        
        cout << endl;
    }

    return 0;
}
