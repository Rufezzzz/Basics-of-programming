#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    setlocale(0,"");
    
    int n, sum = 0;
    
    cout << "N = ";
    cin >> n;
    
    for (int i = 1; i <= n; i++)
    {
        int ans = 1;
        
        for (int j = i; j <= 2 * i; j++)
        {
            ans *= j;
        }
        
        sum += ans;
    }
    
    cout << "Сумма равна = " << sum;
    
    return 0;
}
